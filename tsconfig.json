{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "jsx": "preserve",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "inlineSourceMap": false,
        "noEmitHelpers": false,
        "alwaysStrict": true,
        "outDir": "./dev",
        "baseUrl": ".",
        "paths": {
          "actions/*": ["src/actions"],
          "components/*": ["src/components"],
          "data/*": ["src/data"],
          "editors/*": ["src/editors"],
          "reducers/*": ["src/reducers"],
          "types/*": ["src/types"],
          "utils/*": ["src/utils"]
        }
    },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
