{
	"StatelessFunctionalComponent": {
		"prefix": "template-sfc",
		"body": [
			"import * as React from 'react';",
			"import { StyledComponentProps } from 'types/component';",
			"import { withStyles, classNames } from 'styles/jss';",
			"import { JSSStyles } from 'styles/jss';",
			"",
			"const styles: JSSStyles = {",
			"  ${TM_FILENAME_BASE}: {",
			"",
			"  },",
			"};",
			"",
			"export interface ${TM_FILENAME_BASE}Props {",
			"  className?: string;",
			"}",
			"",
			"/**",
			" * ${TM_FILENAME_BASE} React Stateless Component",
			" */",
			"export const ${TM_FILENAME_BASE}: = withStyles<${TM_FILENAME_BASE}Props>(styles)(({",
			"  className, classes, children,",
			"}) => {",
			"  return (",
			"    <div className={classNames(['${TM_FILENAME_BASE}', classes.${TM_FILENAME_BASE}, className])}>",
			"      {children}",
			"    </div>",
			"  );",
			"});",
			""
		],
		"description": "Stateless Functional Component"
	},
	"PureComponent": {
			"prefix": "template-pure",
			"body": [
				"import * as React from 'react';",
				"import { StyledComponentProps } from 'types/component';",
				"import { withStyles, classNames } from 'styles/jss';",
        "import { JSSStyles } from 'styles/jss';",
				"",
        "const styles: JSSStyles = {",
        "  ${TM_FILENAME_BASE}: {",
        "",
        "  },",
        "};",
				"",
				"export interface ${TM_FILENAME_BASE}Props {",
				"  className?: string;",
				"}",
				"",
				"export interface ${TM_FILENAME_BASE}State {",
				"",
				"}",
				"",
				"type Styled${TM_FILENAME_BASE}Props = StyledComponentProps<${TM_FILENAME_BASE}Props, typeof styles>;",
				"",
				"/**",
				" * ${TM_FILENAME_BASE} React Component",
				" */",
				"class ${TM_FILENAME_BASE}",
				"    extends React.PureComponent<Styled${TM_FILENAME_BASE}Props, ${TM_FILENAME_BASE}State> {",
				"",
				"  constructor(props) {",
				"    super(props);",
				"  }",
				"",
				"  render() {",
				"    const { className, classes, children } = this.props;",
				"",
				"    return (",
				"      <div className={classNames(['${TM_FILENAME_BASE}', classes.${TM_FILENAME_BASE}, className])}>",
				"        {children}",
				"      </div>",
				"    );",
				"  }",
				"}",
				"",
				"const Styled${TM_FILENAME_BASE} = withStyles<${TM_FILENAME_BASE}Props>(styles)(${TM_FILENAME_BASE});",
				"export { Styled${TM_FILENAME_BASE} as ${TM_FILENAME_BASE} };",
				""
			],
			"description": "React Pure Component"
	}
}