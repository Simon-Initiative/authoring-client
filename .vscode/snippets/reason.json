{
	"ReasonSFC": {
		"prefix": "template-reason-sfc",
		"body": [
      "[@bs.module \"./${TM_FILENAME_BASE}.style\"] external styles: Js.Dict.t(string) = \"styles\";",
      "",
      "let componentName = \"${TM_FILENAME_BASE}\";",
      "",
      "let component = ReasonReact.statelessComponent(componentName);",
      "",
      "let make = (",
      "  ~classes: Js.Dict.t(string),",
      "  ~className: option(string),",
      "  children",
      ") => {",
      "  ...component",
      "  render: _self => {",
      "    <div className={StyleUtils.classNames([",
      "      componentName,",
      "      StyleUtils.jssClass(classes, componentName),",
      "      Option.valueOr(className, \"\")",
      "    ])}>",
      "      children",
      "    </div>",
      "  }",
      "};",
      "",
      "let jsComponentUnstyled =",
      "  ReasonReact.wrapReasonForJs(",
      "    ~component,",
      "    (jsProps) => {",
      "      make(",
      "        ~classes=jsProps##classes,",
      "        ~className=Js.Nullable.toOption(jsProps##className),",
      "        jsProps##children",
      "      )",
      "    }",
      "  );",
      "",
      "let jsComponent =  StyleUtils.injectSheet(styles, jsComponentUnstyled);",
      ""
		],
		"description": "Reason React Stateless Functional Component"
	}
}